{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "recipes"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "facile",
        "moyen",
        "difficile"
      ]
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "ingredient": {
      "type": "component",
      "repeatable": true,
      "component": "recipes.ingredient"
    },
    "steps": {
      "type": "dynamiczone",
      "components": [
        "step.step",
        "step.title"
      ],
      "required": true
    },
    "utensils": {
      "collection": "utensil"
    },
    "person": {
      "type": "integer"
    },
    "prep_time": {
      "type": "integer"
    },
    "cook_time": {
      "type": "integer"
    },
    "source": {
      "type": "string"
    }
  }
}
